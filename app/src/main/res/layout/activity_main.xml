<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body"
        tools:context=".MainActivity"
        android:background="@drawable/background"

>
<!--
    ONE DAY I WILL CREATE THIS!!!
    android:background="29000000" near xmlns
    <include layout="@layout/video_back" />
-->

    <TextView
            android:id="@+id/homeTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Holiday is for Everyone"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"


            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="516dp"
            app:layout_constraintHorizontal_bias="1.0"

            android:fontFamily="@font/helvetica"
    />

    <Spinner
            android:id="@+id/countrypicker"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFFFF"


            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintVertical_bias="0.499"
    >

    </Spinner>

    <TextView
            android:id="@+id/spinner_label"
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.637"
            app:layout_constraintVertical_bias="0.499"

            android:text="--"
            android:textColor="#000000"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#4F666666"

    />

    <EditText
            android:id="@+id/searchTextbox"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="17sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:hint="Enter Year here"
            android:textColorHint="#AAAAAA"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF"

            app:layout_constraintHorizontal_bias="0.203"
            app:layout_constraintVertical_bias="0.499"

    />


    <Button
            android:id="@+id/searchButton"
            android:layout_width="100dp"
            android:layout_height="45dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="Search"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.569"
    />
</android.support.constraint.ConstraintLayout>